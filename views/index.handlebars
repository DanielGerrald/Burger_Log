<div id="bg">
  <img src="/assets/images/Burger-of-the-Day_board.jpg" alt="">
</div>
<div class="row justify-content-center">
  <div class="col-sm-5">
    <div class="special-card">
      <div class="card border border-dark rounded mt-5">
        <div class="card-body">
          <h2 class="card-title">Burgers to be Devoured!</h2>
          <ul class="card-text">
            {{#each burgers}}
            {{#unless devoured}}
            {{> burgers/burger-block devour=true}}
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-5">
    <div class="special-card">
      <div class="card border border-dark rounded mt-5">
        <div class="card-body">
          <h2 class="card-title">Devoured Burgers!</h2>
          <ul class="card-text">
            {{#each burgers}}
            {{#if devoured}}
            <li>
              <p><b>{{name}}</b></p>
            </li>
            {{/if}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center">
  <div class="col-sm-12">
    <div class="card-transparent">
      <div class="card-body text-center">
        <h2 class="card-title">Add a Burger</h2>
        <form class="create-form">

          <div class="form-group">
            <label for="ca">Burger Name:</label>
            <input type="text" id="ca" name="name">
            <button type="submit">Add Burger</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>